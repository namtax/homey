<div class="w-full">
  <% if flash[:error].present? %>
    <p class='flash-error'><%= flash[:error] %></p>
  <% end %>
  <% if flash[:notice].present? %>
    <p class='flash-notice'><%= flash[:notice] %></p>
  <% end %>
</div>

<div class="w-full">
  <h1 class="font-bold text-4xl my-6">Projects</h1>
  <span class="mt-20">
    <%= link_to("New Project", new_project_path, class: 'px-6 py-3 text-blue-100 no-underline bg-blue-500 hover:bg-blue-600 hover:underline hover:text-blue-200') %>
  </span>
</div>

<% if @projects.any? %> 
  <div class="grid grid-cols-3 mt-12">
    <div>
      <h2 class="font-bold text-2xl">Name</h2>
    </div>
    <div>
      <h2 class="font-bold text-2xl">Created</h2>
    </div>
    <div>
      <h2 class="font-bold text-2xl">Updated</h2>
    </div>
    <% @projects.each do |project| %> 
      <div><%= link_to(project.name.capitalize, project_path(project)) %></div>
      <div><%= project.created_at %> </div>
      <div><%= project.updated_at %> </div>
    <% end %>
  </div>
<% end %>