<div>
  <h1 class="mb-8 font-bold text-4xl">New Project</h1>
  <%= form_with model: @project do |form| %>
    <p> <%= form.label :name %> </p>
    <p><%= form.text_field :name %></p>
    <%= form.submit class: 'mt-6 px-6 py-3 text-blue-100 no-underline bg-blue-500 hover:bg-blue-600 hover:underline hover:text-blue-200' %>
  <% end %>
</div>
